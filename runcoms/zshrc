function rs() {
  # read name
  NAME=$(basename $(pwd))
  rename-session ${NAME/./}
  zle reset-prompt
}
zle -N rs
bindkey '^S' rs

function guake-new-tab() {
  guake -n 0
}
zle -N guake-new-tab
bindkey '^T' guake-new-tab

